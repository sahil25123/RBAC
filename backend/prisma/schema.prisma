
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User  {
  id       Int   @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  roles     Role[]   @relation("UserRoles", references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
   
}

model Role {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  permissions String[] 
  users    User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}